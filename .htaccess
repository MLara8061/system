# Bloquear acceso a archivos sensibles en la ra√≠z
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Bloquear archivos .env en cualquier ruta
  RewriteRule \.env$ - [F,L]
</IfModule>

# Alternativa sin mod_rewrite
<FilesMatch "^(\.env|.*\.(sql|bak|sh|ini))$">
  Require all denied
</FilesMatch>

# Bloquear acceso directo a vistas PHP (solo permitir index.php, login.php, ajax.php)
<FilesMatch "\.php$">
  Require all denied
</FilesMatch>

<FilesMatch "^(index|login|ajax)\.php$">
  Require all granted
</FilesMatch>
